  <script>
    const STATION_LINK = "https://your-station-link.com"; // <- ‡§Ö‡§™‡§®‡§æ link ‡§°‡§æ‡§≤‡•á‡§Ç
    function genUID(){ return "BJS" + Math.floor(100000 + Math.random()*900000); }
    document.getElementById("agree").onclick = function(){
      const uid = genUID();
      localStorage.setItem("bjs_uid", uid);
      document.getElementById("uid").textContent = "Your UID: " + uid;
      const a = document.getElementById("open");
      a.href = STATION_LINK + "?uid=" + encodeURIComponent(uid);
      a.style.display = "block";
      this.style.display = "none";
    };
    // if already agreed
    (function(){
      const uid = localStorage.getItem("bjs_uid");
      if(uid){
        document.getElementById("uid").textContent = "Your UID: " + uid;
        const a = document.getElementById("open");
        a.href = STATION_LINK + "?uid=" + encodeURIComponent(uid);
        a.style.display = "block";
        document.getElementById("agree").style.display="none";
      }
    })();
  </script>
